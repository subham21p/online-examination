<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="20dp"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/teal_200"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>
    <TextView
        android:id="@+id/textViewNameToShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nameDot"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
         />

    <TextView
        android:id="@+id/textViewNameShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/textViewNameToShow"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textViewSubjectToShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subject"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
         />

    <TextView
        android:id="@+id/textViewSubjectShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/textViewSubjectToShow"
         />



        <TextView
            android:id="@+id/textViewDateShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/textViewUsernameShow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="TextView"
        />
    <TextView
    android:id="@+id/textViewScoreShow"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:text="TextView"
    />
</LinearLayout>