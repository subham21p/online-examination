<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutShowDelete"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="20dp"
    android:background="@color/teal_200"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textViewNameToShowDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/nameDot" />

        <TextView
            android:id="@+id/textViewNameShowDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/textViewNameToShowDelete"
            android:text="TextView" />

        <ImageView
            android:id="@+id/imageViewShowDelete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@id/textViewNameToShowDelete"
            android:layout_alignParentRight="true"
            app:srcCompat="@android:drawable/ic_delete" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textViewSubjectToShowDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/subject" />

        <TextView
            android:id="@+id/textViewSubjectShowDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/textViewSubjectToShowDelete"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewDateShowDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="TextView" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textViewUsernameShowDelete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewScoreShowDelete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="TextView" />

</LinearLayout>